            <TextBox Canvas.Left="174" TextWrapping="NoWrap" Canvas.Top="138" Width="120" TabIndex="3" HorizontalAlignment="Center" VerticalAlignment="Top"/>
        </Canvas>
    </GroupBox>

    <Button Content="Calculate" Canvas.Left="602" Canvas.Top="131" IsDefault="True" Height="30" Width="84" TabIndex="6" FontWeight="Bold" FontSize="14" HorizontalAlignment="Center" VerticalAlignment="Top" />
