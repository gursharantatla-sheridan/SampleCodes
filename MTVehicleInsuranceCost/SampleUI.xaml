    <Label Content="Annual Insurance Cost" Canvas.Left="256" Canvas.Top="305" HorizontalAlignment="Center" VerticalAlignment="Top" FontWeight="Bold" FontSize="14"/>
    <Label Content="$0.00" Canvas.Left="256" Canvas.Top="339" Height="37" Width="321" HorizontalContentAlignment="Left" VerticalContentAlignment="Center" Background="#FFBAD5FF" HorizontalAlignment="Center" VerticalAlignment="Top" FontWeight="Bold" FontSize="16"/>
</Canvas>
