            <TextBox Canvas.Left="136" TextWrapping="Wrap" Canvas.Top="45" Width="120" TabIndex="1"/>
            <ComboBox Canvas.Left="136" Canvas.Top="74" Width="120" HorizontalAlignment="Center" VerticalAlignment="Top" TabIndex="2"/>
        </Canvas>
    </GroupBox>

    <Button Content="Calculate GPA" Canvas.Left="577" Canvas.Top="126" IsDefault="True" Height="30" Width="84" TabIndex="6"/>
