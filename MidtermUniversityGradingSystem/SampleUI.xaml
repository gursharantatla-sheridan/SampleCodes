    <Button Content="Close" Canvas.Left="577" Canvas.Top="216" Height="30" Width="84" IsCancel="True" TabIndex="8" />

    <GroupBox Height="128" Header="Enter Course Grades" Width="278" Canvas.Left="282" Canvas.Top="251">
