            <TextBox Canvas.Left="136" TextWrapping="Wrap" Canvas.Top="44" Width="120" HorizontalAlignment="Left" VerticalAlignment="Top" TabIndex="4"/>
            <TextBox Canvas.Left="136" TextWrapping="Wrap" Canvas.Top="76" Width="120" HorizontalAlignment="Left" VerticalAlignment="Center" TabIndex="5"/>
        </Canvas>
    </GroupBox>
    
    <Label Content="GPA" Canvas.Left="602" Canvas.Top="264" HorizontalAlignment="Left" VerticalAlignment="Top" FontWeight="Bold"/>
    <Label Canvas.Left="577" Canvas.Top="295" Height="84" Width="84" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Background="#FFBAD5FF" HorizontalAlignment="Left" VerticalAlignment="Top" FontWeight="Bold" FontSize="16"/>
