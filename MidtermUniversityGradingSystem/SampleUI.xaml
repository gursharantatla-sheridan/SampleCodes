    <GroupBox Height="58" Header="Select Type of Student" Width="278" Canvas.Left="282" Canvas.Top="52" HorizontalAlignment="Left" VerticalAlignment="Center">
        <Canvas>
            <RadioButton Content="Undergraduate"  Margin="59,0,209,0" Height="16" Width="107" Canvas.Left="-48" Canvas.Top="10" TabIndex="10" />
            <RadioButton Content="Graduate" Height="16" Width="129" Canvas.Left="123" Canvas.Top="10" TabIndex="11" />
        </Canvas>
    </GroupBox>

    <GroupBox Height="131" Header="Input the Student's Information" Width="278" Canvas.Left="282" Canvas.Top="115">
