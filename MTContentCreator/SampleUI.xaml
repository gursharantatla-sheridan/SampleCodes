        </Canvas>
    </GroupBox>
    
    <GroupBox x:Name="grpInputCreatorInfo" Height="240" Header="Input the Content Creator's Information" Width="278" Canvas.Left="282" Canvas.Top="139" HorizontalAlignment="Center" VerticalAlignment="Top" FontWeight="Bold">
        <Canvas>
            <Label Content="Name:" Canvas.Left="10" Canvas.Top="17" HorizontalAlignment="Center" VerticalAlignment="Top"/>
            <TextBox Canvas.Left="136" TextWrapping="NoWrap" Canvas.Top="21" Width="120" HorizontalAlignment="Center" VerticalAlignment="Top"/>
            <Label Content="Followers:" Canvas.Left="10" Canvas.Top="48" HorizontalAlignment="Center" VerticalAlignment="Top"/>
            <TextBox Canvas.Left="136" TextWrapping="NoWrap" Canvas.Top="52" Width="120" HorizontalAlignment="Center" VerticalAlignment="Top"/>
