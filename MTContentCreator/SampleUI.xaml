            <TextBox Canvas.Left="136" TextWrapping="NoWrap" Canvas.Top="146" Width="120" HorizontalAlignment="Center" VerticalAlignment="Top"/>
            <Label Content="Total Comments:" Canvas.Left="10" Canvas.Top="173" HorizontalAlignment="Center" VerticalAlignment="Top"/>
            <TextBox  Canvas.Left="136" TextWrapping="NoWrap" Canvas.Top="177" Width="120" HorizontalAlignment="Center" VerticalAlignment="Top"/>
        </Canvas>
    </GroupBox>
    
    <Button Content="Calculate" Canvas.Left="579" Canvas.Top="133" IsDefault="True" Height="30" Width="84" HorizontalAlignment="Center" VerticalAlignment="Center" FontWeight="Bold"/>
    <Button Content="Clear" Canvas.Left="579" Canvas.Top="178" Height="30" Width="84" HorizontalAlignment="Center" VerticalAlignment="Center" FontWeight="Bold"/>
    <Button Content="Close" Canvas.Left="579" Canvas.Top="223" Height="30" Width="84" IsCancel="True" HorizontalAlignment="Center" VerticalAlignment="Center" FontWeight="Bold"/>
    
    <TextBlock Canvas.Left="579" TextWrapping="Wrap" Text="Engagement Rate:" Canvas.Top="298" FontWeight="Bold" HorizontalAlignment="Center" VerticalAlignment="Top" Width="84" TextAlignment="Center"/>
    <Label Canvas.Left="579" Canvas.Top="335" Height="44" Width="84" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Background="#FFBAD5FF" HorizontalAlignment="Left" VerticalAlignment="Center" FontWeight="Bold" FontSize="16" Content="0"/>
